{
	"trailingComma": "all",
	"useTabs": true,
	"tabWidth": 4,
	"singleQuote": true,
	"bracketSpacing": true,
	"astroAllowShorthand": false,
	"importOrder": [
		"^node:(.*)$",
		"^@layouts/(.*)$",
		"^@components/(.*)$",
		"^@stores/(.*)$",
		"^@libs/(.*)$",
		"^@styles/(.*)$",
		"^@/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
